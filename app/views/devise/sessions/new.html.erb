<div class="container session-manager-container" style="max-width: 1000px; padding: 3rem 5rem;">
<h2 class="session-manager-header">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data:{ turbo: false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %> 
<div class="my-5 text-align-start">
<%= render "devise/shared/links" %>
</div>
</div>