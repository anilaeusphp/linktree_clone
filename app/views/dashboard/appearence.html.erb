<div class="container">
    <h1 class="text-center mb-5">Appearence Page</h1>
    <%= simple_form_for(current_user, url: registration_path(current_user) ,html: { method: :put }, data: {turbo: false}) do |f| %>
        <div class="row ">
            <div class="col-8">
                <div class="row d-flex align-items-center flex-column justify-content-center gap-4 w-full">
                    <div class="row mt-3 d-flex justify-content-center">
                        <%= image_tag(current_user.avatar,  style: "width: 200px; objec-fit: contain; display:inline-block") if current_user.avatar.attached?  %>
                    </div>
                    <div class="row mt-3 d-flex justify-content-center w-50">
                        <%= f.input :avatar, required: false, label: false %>
                    </div>
                    <div class="row mt-3 d-flex justify-content-center w-50">
                        <%= f.input :full_name, required: true, label: false, placeholder: "Enter your Full Name" %>
                    </div>
                    <div class="row mt-3 d-flex justify-content-center w-50">
                        <div class="input-group">
                            <span class="input-group-text input-group-text-for-username" style="height: 38px;">@</span>
                            <%= f.input :username, required: true, label: false, placeholder: "Enter your username", class: "form-control" %>
                        </div>
                    </div>
                    <div class="row mt-3 d-flex justify-content-center w-50">
                        <%= f.input :body, required: true, label: false, placeholder: "Enter your Bio" %>
                    </div>
                    <div class="row mt-3 d-flex justify-content-center w-50">
                        <%= f.submit "Update Avatar", class: "btn btn-primary" %>
                    </div>
                </div>
            </div>
            <div class="col-4" style="background-color: pink;"></div>
        </div>
    <% end %>
</div>